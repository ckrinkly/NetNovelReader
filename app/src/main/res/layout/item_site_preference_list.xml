<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="itemDetail"
            type="com.netnovelreader.data.db.SitePreferenceBean"/>
        <variable
            name="clickEvent"
            type="com.netnovelreader.viewmodel.SettingViewModel"/>
    </data>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@{itemDetail.hostname}"
        android:onClick="@{() -> clickEvent.editSiteTask(itemDetail.hostname)}"
        android:onLongClick="@{() -> clickEvent.askDeleteSiteTask(itemDetail.hostname)}" />
</layout>
